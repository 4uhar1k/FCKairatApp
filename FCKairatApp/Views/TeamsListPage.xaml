<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FCKairatApp.TeamsListPage"
             Title="TeamsListPage"
             BackgroundColor="Black">
    <VerticalStackLayout>
        <Border>
    <StackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
               
            </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Source="fckairat.jpg" />
                    <Label Grid.Row="0" Grid.Column="1" Text="FC Kairat" FontSize="25" TextColor="White" VerticalTextAlignment="Center"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="Rafael Urazbakhtin" FontSize="15" WidthRequest="200" TextColor="Gray" VerticalOptions="Start" VerticalTextAlignment="Start"/>
                    <Button Grid.Row="0" Grid.Column="2" Text="Delete" BackgroundColor="Red"  WidthRequest="80" HeightRequest="40"  />
        </Grid>
    </StackLayout>
</Border>
<Border>
    <StackLayout>
                <Grid x:Name="AddingGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Column="0" Source="fckairat.jpg" />
                    <Entry Grid.Column="1" Placeholder="Name..." HeightRequest="50" FontSize="25" TextColor="White" VerticalTextAlignment="Center"/>
                    <Entry Grid.Row="1" Grid.Column="1" Placeholder="Coach..." FontSize="15" WidthRequest="200" TextColor="Gray" VerticalOptions="Start" VerticalTextAlignment="Start"/>
                    <Button Grid.Column="2" Text="Add" BackgroundColor="Green"  WidthRequest="80" HeightRequest="40"  />
                </Grid>
            </StackLayout>
</Border>
        <Button Text="Add" BackgroundColor="Green" Clicked="AddBtnClicked"  WidthRequest="80" HeightRequest="40"  />
    </VerticalStackLayout>
</ContentPage>