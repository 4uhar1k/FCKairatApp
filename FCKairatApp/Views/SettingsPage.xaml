<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Black"
             x:Class="FCKairatApp.SettingsPage"
             Title="Settings">
    <VerticalStackLayout Margin="10,10,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Language" TextColor="White" FontSize="35"/>
            <Picker Grid.Column="1" Title="Language" BackgroundColor="Gray" FontSize="20" WidthRequest="125" HorizontalTextAlignment="Center" >
                <Picker.Items>
                    <x:String>KZ</x:String>
                    <x:String>RU</x:String>
                    <x:String>EN</x:String>
                </Picker.Items>
            </Picker>
        </Grid>
        <Button Text="Apply changes" BackgroundColor="Green" WidthRequest="150" />
    </VerticalStackLayout>
</ContentPage>